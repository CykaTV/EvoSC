{foreach $ranks ?? [] as $rank}
{if $rank->player->Online}
<quad pos="0 -{$iterator->counter * 4 - 2.8}" size="8.4 3.8" z-index="0" bgcolor="{primary_color()|noescape}8"/>
{/if}
<label pos="8  -{$iterator->counter * 4 - 1}" z-index="1" size="8 3" text="{$rank->Rank}{intval($rank->Rank) > 0 ? '.' : ''}" textsize="1.2" valign="center" halign="right"/>
<label pos="21 -{$iterator->counter * 4 - 1}" z-index="0" size="13 3" text="{formatScore($rank->Score)}" textcolor="cdff" opacity="0.3" textsize="1.2" valign="center" halign="right"/>
<label pos="21 -{$iterator->counter * 4 - 1}" z-index="1" size="13 3" text="{cutZeroes(formatScore($rank->Score))}" textsize="1.2" valign="center" halign="right"/>
<label pos="22 -{$iterator->counter * 4 - 1}" z-index="1" size="27 3" text="{stripStyle($rank->player->NickName, true)}" textsize="1.1" valign="center" halign="left"/>
{/foreach}>