<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<manialink name="ESC:pay2play-restart-widget" id="pay2play-restart-widget" version="3">

    {% if config('pay2play.addtime.enabled') %}
    <frame pos="{{ config('pay2play.addtime.pos.visible') }}" id="addtime">
        <quad pos="0 0" size="8 10" bgcolor="{{ config('colors.ui.background') }}" opacity="0.6" z-index="-1" action="addtime"/>

        <frame z-index="2" pos="4 -5" scale="0.5">
            {% if esc\Controllers\MapController::getAddedTime() + 10 <= config('pay2play.addtime.time-limit') %}
            <label size="12 3" halign="center" valign="center" textsize="1.2" text="PAY {{ config('pay2play.addtime.cost') }} TO ADD TIME" autonewline="1" textfont="RajdhaniMono" />
            {% else %}
            <label size="12 3" halign="center" valign="center" textsize="1.2" text="TIME LIMIT REACHED" autonewline="1" textfont="RajdhaniMono" />
            {% endif %}
        </frame>
    </frame>
    {% endif %}

    {% if config('pay2play.skip.enabled') %}
    <frame pos="{{ config('pay2play.skip.pos.visible') }}" id="skip">
        <quad pos="0 0" size="8 10" bgcolor="0007" z-index="-1" action="skip" />

        <frame z-index="2">
            <label pos="4 -4" halign="center" valign="center" text="PAY" textfont="RajdhaniMono" />
            <label pos="4 -6" halign="center" valign="center" text="{{ config('pay2play.skip.cost') }}" textfont="RajdhaniMono" />
            <label pos="4 -8" halign="center" valign="center" text="TO SKIP" textfont="RajdhaniMono" />
            <label pos="4 -8" halign="center" valign="center" text="MAP" textfont="RajdhaniMono" />
        </frame>
    </frame>
    {% endif %}

    <script><!--
        Void anim(CMlFrame frame, Text targetPos, Integer duration){
            AnimMgr.Add(frame, targetPos, duration, CAnimManager::EAnimManagerEasing::ExpInOut);
        }

        main() {
            declare Text addtimeVisible = "<frame pos='{{ config('pay2play.addtime.pos.visible') }}' />";
            declare Text addtimeHidden = "<frame pos='{{ config('pay2play.addtime.pos.hidden') }}' />";
            declare Text skipVisible = "<frame pos='{{ config('pay2play.skip.pos.visible') }}' />";
            declare Text skipHidden = "<frame pos='{{ config('pay2play.skip.pos.hidden') }}' />";
            declare addtime <=> (Page.MainFrame.GetFirstChild("addtime") as CMlFrame);
            declare skip <=> (Page.MainFrame.GetFirstChild("skip") as CMlFrame);
            declare Boolean hidden = False;
            declare Integer duration = 800;
            declare Real speed = 0.0;

            while(True){
                yield;

                if(InputPlayer != Null){
                    declare Real UI_Hide_Speed for InputPlayer = 1.0;

                    speed = InputPlayer.Speed;

                    if(speed < 0){
                        speed = speed  * -1;
                    }

                    if(!Map.TMObjective_IsLapRace && InputPlayer.CurrentNbLaps >= 1 || UI_Hide_Speed == 0.0){
                        if(speed < UI_Hide_Speed && hidden){

                            {% if config('pay2play.addtime.enabled') %}
                            anim(addtime, addtimeVisible, duration);
                            {% endif %}
                            {% if config('pay2play.skip.enabled') %}
                            anim(skip, skipVisible, duration);
                            {% endif %}
                            hidden = False;
                        }
                    }else{
                        if(speed >= UI_Hide_Speed && !hidden){
                            {% if config('pay2play.addtime.enabled') %}
                            anim(addtime, addtimeHidden, duration);
                            {% endif %}
                            {% if config('pay2play.skip.enabled') %}
                            anim(skip, skipHidden, duration);
                            {% endif %}
                            hidden = True;
                        }

                        if(speed < UI_Hide_Speed && hidden){
                            {% if config('pay2play.addtime.enabled') %}
                            anim(addtime, addtimeVisible, duration);
                            {% endif %}
                            {% if config('pay2play.skip.enabled') %}
                            anim(skip, skipVisible, duration);
                            {% endif %}
                            hidden = False;
                        }
                    }
                }
            }
        }
    --></script>
</manialink>