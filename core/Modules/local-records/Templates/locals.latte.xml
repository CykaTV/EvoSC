<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<manialink id="LocalRecords" version="3">
<frame pos="-160 40" scale="0.8">
    <quad pos="0 0" z-index="-1" size="50 60" bgcolor="0009"/>
    <label pos="2 -2" z-index="1" size="48 3" text="local records" textsize="1"/>
    <quad pos="0 -6.5" z-index="1" size="50 0.25" bgcolor="18f9"/>
    <quad pos="0 0" z-index="0" size="50 6.5" bgcolor="18f3"/>

    {if count($locals)}
    {foreach $locals as $local}
    {if $local->player->Online}
    <quad pos="0 -{$iterator->counter * 4 + 4.2}" size="8.4 3.8" z-index="0" bgcolor="05a8"/>
    {/if}
    <label pos="8 -{$iterator->counter * 4 + 6}" z-index="1" size="8 3" text="{$iterator->counter}." textsize="1.2" valign="center" halign="right"/>
    <label pos="9 -{$iterator->counter * 4 + 6}" z-index="1" size="13 3" text="{$local->getScore()}" textsize="1.2" valign="center" halign="left"/>
    <label pos="22 -{$iterator->counter * 4 + 6}" z-index="1" size="27 3" text="{$local->player->NickName}" textsize="1.2" valign="center" halign="left"/>
    {/foreach}
    {else}
    <label pos="2 -9" z-index="1" size="40 3" text="$iNo local records." textsize="0.8" halign="left"/>
    {/if}

</frame>
</manialink>