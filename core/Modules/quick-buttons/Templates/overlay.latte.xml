<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<manialink version="3" layer="ScoresTable" id="QuickButtons" name="ESC:QuickButtons">
    <frame pos="{($buttons->count() * 6) / -2 - 2.5} -51" halign="center" valign="center" scale="1">
        {foreach $buttons as $button}
        <frame pos="{$iterator->counter * 6} 0" data-action="{$button->action}">
            <label size="5 5" valign="center" halign="center" textsize="1.25" text="{$button->icon}" textcolor="eeee" z-index="1" focusareacolor1="{config('colors.ui.window.bg.color')}0" focusareacolor2="{config('colors.ui.window.header.color')}9" ScriptEvents="1" />
            <label pos="0 -5" valign="center" halign="center" textsize="0.7" text="{$button->text}" textfont="{config('colors.ui.font')|noescape}" textcolor="eeee" z-index="1" hidden="1" />
        </frame>
        {/foreach}
    </frame>

    <script><!--
    main(){
        while(True){
            yield;

            foreach(event in PendingEvents){
                if(event.Type == CMlScriptEvent::Type::MouseOver){
                    declare parent = (event.Control.Parent as CMlFrame);
                    (parent.Controls[1] as CMlLabel).Show();
                }
                if(event.Type == CMlScriptEvent::Type::MouseOut){
                    declare parent = (event.Control.Parent as CMlFrame);
                    (parent.Controls[1] as CMlLabel).Hide();
                }
                if(event.Type == CMlScriptEvent::Type::MouseClick){
                    declare parent = (event.Control.Parent as CMlFrame);
                    TriggerPageAction(parent.DataAttributeGet("action"));
                }
            }
        }
    }
    --></script>
</manialink>