<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<manialink name="ESC:MatchSettingsManager" id="MatchSettingsManager" version="3">

    <frame id="window" pos="-60 60">
        <quad size="120 120" pos="0 -6" bgcolor="{config('colors.ui.background')}" opacity="0.85" z-index="-1" />
        <quad size="120 6" bgcolor="{config('colors.ui.header')}" opacity="0.95" z-index="0" />
        <label pos="2 -3" valign="center" textsize="1" text="MatchSettings-Manager - Edit: {$matchSettingsFile}.txt" z-index="1" />
        <label class="close" pos="117 -3" size="3 3" text="❌" textsize="1.2" z-index="2" halign="center" valign="center" textcolor="ffff" ScriptEvents="1" focusareacolor1="0000" />

        <frame pos="0 -9" z-index="2">
            <label pos="15 0" size="26 4" textsize="0.5" text="mode_script_settings" valign="center" halign="center" ScriptEvents="1" focusareacolor1="333f" focusareacolor2="{config('colors.ui.header')}c" />
            <label pos="112 0" size="12 4" textsize="0.4" text=" SAVE" valign="center" halign="center" ScriptEvents="1" z-index="1" focusareacolor1="{config('colors.ui.header')}6" focusareacolor2="{config('colors.ui.header')}c" />
        </frame>

        <frame id="mode-script-settings" pos="2 -14" z-index="5">
            {foreach $xml->mode_script_settings->setting as $setting}
            <frame pos="0 {$iterator->counter * -6 + 4.5}">
                <entry default="{$setting['value']}" hidden="1" pos="-17 0" size="28 4" halign="center" valign="center" textsize="1" focusareacolor1="111f" focusareacolor2="000f" />
                <entry default="{$setting['type']}" hidden="1" />
                <label pos="0 0"  size="60 4" valign="center" textsize="1.0" scale="0.8" text="{$setting['name']}" />

                {if $iterator->counter % 2 == 0}
                <quad pos="-2 0" size="120 6" bgcolor="222" opacity="0.9" valign="center" z-index="-1" />
                {else}
                <quad pos="-2 0" size="120 6" bgcolor="333" opacity="0.9" valign="center" z-index="-1" />
                {/if}

                {if $setting['type'] == 'real' || $setting['type'] == 'text'}
                <entry class="entry" pos="101 0" size="30 4" valign="center" halign="center" ScriptEvents="1" default="{$setting['value']}" textsize="1" focusareacolor1="0003" focusareacolor2="6663" />
                {/if}
                {if $setting['type'] == 'integer'}
                <label class="int down" pos="88 0" size="4 4" valign="center" halign="center" ScriptEvents="1" text="" textsize="0.7" focusareacolor1="0000" focusareacolor2="0000" />
                <entry class="entry entry-integer" pos="101 0" size="20 4" valign="center" halign="center" ScriptEvents="1" default="{$setting['value']}" textsize="1" focusareacolor1="0003" focusareacolor2="6663" />
                <label class="int up" pos="114 0" size="4 4" valign="center" halign="center" ScriptEvents="1" text="" textsize="0.7" focusareacolor1="0000" focusareacolor2="0000" />
                {/if}
                {if $setting['type'] == 'boolean'}
                <label pos="97" valign="center" halign="right" textsize="1" scale="0.6" text="OFF" />
                <label pos="105" valign="center" halign="left" textsize="1" scale="0.6" text="ON" />
                <label class="switch" pos="101 0" size="5 4" valign="center" halign="center" textsize="2.2" text="{$setting['value'] == '1' ? '' : ''}" data-enabled="{$setting['value']}" ScriptEvents="1" focusareacolor1="0000" focusareacolor2="0000" />
                {/if}
            </frame>
            {/foreach}
        </frame>
    </frame>

    <script><!--
    #Include "MathLib" as ML
    #Include "TextLib" as TL

    Void windowSetSize(CMlFrame window, Real width, Real height){
        declare quad = (window.Controls[0] as CMlQuad);
        quad.Size = <width, height>;
        window.RelativePosition_V3 = <-width/2.0, height/2.0>;
    }

    Void handleEntry(CMlControl control){
        declare CMlEntry entry <=> (control as CMlEntry);
        (control.Parent.Controls[0] as CMlEntry).SetText(entry.Value, False);
    }

    Void handleSwitch(CMlControl control){
        declare CMlLabel switcher <=> (control as CMlLabel);
        declare Boolean enabled = control.DataAttributeGet("enabled") == "1";

        if(enabled){
            switcher.SetText("");
            control.DataAttributeSet("enabled", "0");
            (control.Parent.Controls[0] as CMlEntry).SetText("0", False);
        }else{
            switcher.SetText("");
            control.DataAttributeSet("enabled", "1");
            (control.Parent.Controls[0] as CMlEntry).SetText("1", False);
        }
    }

    CMlEntry getEntryInteger(CMlControl control){
        foreach(control in control.Parent.Controls){
            if(control.HasClass("entry-integer")){
                return (control as CMlEntry);
            }
        }

        return Null;
    }

    Void handleInt(CMlControl control){
        declare Boolean up = control.HasClass("up");
        declare entry = getEntryInteger(control);
        declare Integer value = TL::ToInteger(entry.Value);

        if(up){
            entry.SetText(TL::ToText(value + 1), True);
        }else{
            entry.SetText(TL::ToText(value - 1), True);
        }
    }

    main(){
        declare window <=> (Page.MainFrame.GetFirstChild("window") as CMlFrame);

        windowSetSize(window, 120.0, {count($xml->mode_script_settings->setting) * 6 + 7}.0);

        while(True){
            yield;

            foreach(event in PendingEvents){
                if(event.Type == CMlScriptEvent::Type::MouseClick && event.Control.HasClass("close")){
                    window.Hide();
                    TriggerPageAction("msm.overview");
                    continue;
                }

                if(event.Type == CMlScriptEvent::Type::MouseClick && event.Control.HasClass("switch")){
                    handleSwitch(event.Control);
                    continue;
                }

                if(event.Type == CMlScriptEvent::Type::MouseClick && event.Control.HasClass("int")){
                    handleInt(event.Control);
                    continue;
                }

                if(event.Type == CMlScriptEvent::Type::EntrySubmit){
                    handleEntry(event.Control);
                    continue;
                }

                log(event.Type);
            }
        }
    }

    --></script>
</manialink>