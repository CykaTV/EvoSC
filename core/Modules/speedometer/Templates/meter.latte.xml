<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<manialink name="ESC:speedometer" id="speedometer" version="3">
    <frame id="speedometer" pos="80 -78.5" z-index="100">
        <label id="speed" pos="0 0" text="" halign="right" valign="center" textsize="7" textprefix="" textfont="RajdhaniMono"/>
        <label pos="0.5 -1.9" text="KM/H" halign="left" valign="center" textsize="1.8" textprefix="" textfont="RajdhaniMono"/>
    </frame>

    <script><!--
    #Include "MathLib" as MathLib

    main(){
        declare player <=> InputPlayer;
        declare speedLabel <=> (Page.MainFrame.GetFirstChild("speed") as CMlLabel);
        declare speedometer <=> (Page.MainFrame.GetFirstChild("speedometer") as CMlFrame);
        declare speed = 0;
        declare Boolean hidden = False;

        while(True){
            yield;

            while(player == Null){
                sleep(10);
            }

            speed = MathLib::NearestInteger(player.Speed * 3.6);

            if(speed < 0){
                speed = -speed;
            }

            speedLabel.Value = "" ^ speed;

            if(player.CurLap.Time == -4 && !hidden){
                hidden = True;
                speedometer.Hide();
            }
            if(player.CurLap.Time != -4 && hidden){
                hidden = False;
                speedometer.Show();
            }
        }
    }
    --></script>
</manialink>