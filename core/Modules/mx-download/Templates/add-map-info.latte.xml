{contentType text}
{extends 'components.window'}

{block id}
add-mx-map
{/block}

{block icon}

{/block}

{block title}
Add map?
{/block}

{block content}
<frame pos="1 0">
    <label pos="-1 0" size="100 20" text="{$details->GbxMapName}" textsize="3" textcolor="{config('colors.ui.window.text.primary')}" textfont="{config('colors.ui.font')|noescape}"/>
    <label pos="0 -6" size="116 20" text="by {$details->Username}" textsize="1" textcolor="{config('colors.ui.window.text.primary')}" textfont="{config('colors.ui.font')|noescape}"/>
    <label pos="0 -10" size="116 20" text="Title-Pack: TM{$details->EnvironmentName}@{$details->TitlePack}" textsize="0.5" textcolor="{config('colors.ui.window.text.primary')}" textfont="{config('colors.ui.font')|noescape}"/>
    <label pos="0 -13" size="116 20" text="Style: {$details->StyleName} {$details->LengthName} ({$details->DifficultyName})" textsize="0.5" textcolor="{config('colors.ui.window.text.primary')}" textfont="{config('colors.ui.font')|noescape}"/>
    <label pos="0 -16" size="116 20" text="Mood: {$details->Mood}" textsize="0.5" textcolor="{config('colors.ui.window.text.primary')}" textfont="{config('colors.ui.font')|noescape}"/>
    <label pos="0 -19" size="116 20" text="Single-Lap: {$details->RouteName=='Single' ? 'Yes' : 'No'}" textsize="0.5" textcolor="{config('colors.ui.window.text.primary')}" textfont="{config('colors.ui.font')|noescape}"/>
    <label id="comments" pos="0 -24" size="115 20" text="{\esc\Modules\MxDownload::parseBB($details->Comments)}" textsize="0.5" autonewline="1" textcolor="{config('colors.ui.window.text.primary')}" textfont=""/>
</frame>

<label pos="105 -3" size="20 5" text=" Add" textsize="0.75" valign="center" halign="center" textcolor="{config('colors.ui.window.text.primary')}" textfont="{config('colors.ui.font')|noescape}" focusareacolor1="{config('colors.ui.window.header.color')}3" focusareacolor2="{config('colors.ui.window.header.color')}c" ScriptEvents="1" class="confirm"/>
{/block}

<script><!--
{block globals}
{/block}

{block functions}
{/block}
--></script>

{block bootScript}
    declare commentsLabel <=> (Page.MainFrame.GetFirstChild("comments") as CMlLabel);
    declare bg <=> (Page.MainFrame.GetFirstChild("bg") as CMlQuad);
    bg.Size = <bg.Size[0], commentsLabel.ComputeHeight(commentsLabel.Value) + 29.0>;
{/block}

{block pendingEvents}
    if(event.Control.HasClass("confirm") && event.Type == CMlScriptEvent::Type::MouseClick){
        window.Hide();
        TriggerPageAction("mx.add,{$details->TrackID}");

        return;
    }
{/block}