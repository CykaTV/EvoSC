    {if $player->Afk}
    <label pos="1 -{$iterator->counter * 4 -1}" z-index="1" size="4 4" text="ðŸ•‘" textsize=".25" textcolor="cccc"/>
    {/if}
    {if $player->isSpectator()}
    <label pos="1 -{$iterator->counter * 4 -1}" z-index="1" size="4 4" text="ðŸ“·" textsize=".6" textcolor="fff5"/>
    {/if}
