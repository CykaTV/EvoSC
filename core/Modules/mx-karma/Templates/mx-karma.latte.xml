<label pos="45 -3.2" z-index="1" size="7 4" text="---"    halign="center" valign="center" textcolor="f999" textsize="1" action="mxk.vote,0"/>

<script><!--
main() {
    declare fr <=> (Page.MainFrame.Controls[0] as CMlFrame);
    declare player <=> InputPlayer;

    declare startPos = fr.PosnX;
    declare endPos = startPos * 1.5;

    while(True){
        yield;

        if(player != Null && player.Speed > 25){
            if(fr.PosnX < endPos){
                fr.PosnX = fr.PosnX + 1;
            }
        }else{
            if(fr.PosnX > startPos){
                fr.PosnX = fr.PosnX - 1;

                if(player.Speed < 1){
                    fr.PosnX = startPos;
                }
            }
        }

        if(fr.PosnX < startPos){
            fr.PosnX = startPos;
        }
    }
}
--></script>