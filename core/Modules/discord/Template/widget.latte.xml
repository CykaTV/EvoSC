{contentType text}
{extends 'components.widget-base'}
{php $slotHorizontal = config('discord.ui.slot_horizontal')}
<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<manialink version="3">
    {block id}discord-button{/block}
    {block size}8 10{/block}

    {block content}
    <quad id="bg" pos="0 0" size="8 10" bgcolor="{config('colors.ui.widget.bg.color')}" opacity="{config('colors.ui.widget.bg.opacity') - 0.15}" z-index="-1" ScriptEvents="1" />

    <frame z-index="2">
        <quad pos="4 -4" size="4 4" halign="center" valign="center" image="https://raw.githubusercontent.com/EvoTM/EvoSC/master/core/Modules/discord/discord.png" imagefocus="" />

        <label id="time" pos="4 -8.2" size="6 1" valign="center" halign="center" textsize="0.002" text="Discord" textfont="{config('colors.ui.font')|noescape}" />
    </frame>
    {/block}

    {block script}
    <script><!--
    --></script>
    {/block}

    <script><!--
    {block globals}
    {/block}

    {block bootScript}
        left__ = {config('discord.ui.position') == 'left' ? 'True' : 'False'};
        slot__ = {config('discord.ui.slot')};
    {/block}

    {block loop}
    {/block}

    {block pendingEvents}
                    if(event.Control == bg && event.Type == CMlScriptEvent::Type::MouseClick){
                        OpenLink("{config('discord.url')|noescape}", ::LinkType::ExternalBrowser);
                    }
                    if(event.Control == bg && event.Type == CMlScriptEvent::Type::MouseOver){
                        AnimMgr.Add(bg, """<quad opacity="0.95" bgcolor="78d" />""", 100, CAnimManager::EAnimManagerEasing::Linear);
                    }
                    if(event.Control == bg && event.Type == CMlScriptEvent::Type::MouseOut){
                        AnimMgr.Add(bg, """<quad opacity="{(config('colors.ui.widget.bg.opacity') - 0.15)|noescape}" bgcolor="{config('colors.ui.widget.bg.color')|noescape}" />""", 100, CAnimManager::EAnimManagerEasing::Linear);
                    }
    {/block}
--></script>
</manialink>