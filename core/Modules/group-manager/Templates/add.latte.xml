<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<manialink name="ESC:GroupsManagerAddPlayer" id="GroupsManager" version="3">
    <frame id="overview" pos="-60 {ceil($playerCount / 2) * 3 + 3}">
        <quad size="120 {ceil($playerCount / 2) * 3 + 5}" pos="0 -6" bgcolor="{config('colors.ui.background')}" opacity="0.85" z-index="-1" />
        <quad size="120 6" bgcolor="{config('colors.ui.header')}" opacity="0.95" z-index="0" />
        <label pos="2 -3" valign="center" textsize="1" text="Groups Manager - Select player to add" z-index="1" />
        <label class="close" pos="117 -3" size="3 3" text="❌" textsize="1.2" z-index="2" halign="center" valign="center" textcolor="ffff" ScriptEvents="1" focusareacolor1="0000" />

        {foreach $players as $player}
        <frame pos="{$iterator->counter > ceil($playerCount / 2) ? 60 : 0} {$iterator->counter * -6 - 4 + ($iterator->counter > ceil($playerCount / 2) ? $playerCount * 3 + 0 : 0)}">
            <label pos="2 0" textsize="1" text="{$player}" valign="center" scale="0.9" />
            <label class="select" pos="52.5 0" size="16 5" textsize="1" text=" Select" valign="center" scale="0.8" halign="center" ScriptEvents="1" focusareacolor1="{config('colors.ui.header')}3" focusareacolor2="{config('colors.ui.header')}9" data-login="{$player->Login}" data-nick="{$player}" />

            <label size="60 6" focusareacolor1="0000" ScriptEvents="1" valign="center" />
        </frame>
        {/foreach}
    </frame>

    <script><!--
    #Include "MathLib" as ML
    #Include "TextLib" as TL

    main(){
        declare overview <=> (Page.MainFrame.GetFirstChild("overview") as CMlFrame);

        while(True){
            yield;

            foreach(event in PendingEvents){
                if(event.Type == CMlScriptEvent::Type::MouseClick && event.Control.HasClass("close")){
                    TriggerPageAction("group.overview");
                    continue;
                }

                if(event.Type == CMlScriptEvent::Type::MouseClick && event.Control.HasClass("select")){
                    declare login = event.Control.DataAttributeGet("login");
                    TriggerPageAction("group.member_add,{$groupId|noescape}," ^ login);
                    TriggerPageAction("group.overview");
                    continue;
                }
            }
        }
    }

    --></script>
</manialink>