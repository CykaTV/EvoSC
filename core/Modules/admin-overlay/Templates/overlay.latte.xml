        </frame>
    </frame>

    <script><!--
    #Include "MathLib" as ML
    #Include "TextLib" as TL

    main(){
        declare cp <=> (Page.MainFrame.GetFirstChild("cp") as CMlFrame);
        declare container <=> (Page.MainFrame.GetFirstChild("container") as CMlFrame);

        declare Boolean show = False;

        declare x_min = cp.RelativePosition_V3[0] + 10.0;
        declare y_min = cp.RelativePosition_V3[1];
        declare x_max = cp.RelativePosition_V3[0] + cp.Size[0];
        declare y_max = cp.RelativePosition_V3[1] - cp.Size[1];

        log(<x_min, y_min>);
        log(<x_max, y_max>);

        while(True){
            sleep(100);

            declare Boolean insideX = (MouseX > x_min && MouseX < x_max);
            declare Boolean insideY = (MouseY < y_min && MouseY > y_max);

            if(!(insideX && insideY) && show){
                show = False;
                AnimMgr.Add(container, "<frame pos='60 0' />", 200, CAnimManager::EAnimManagerEasing::CubicInOut);
            }
            if(insideX && insideY && !show){
                show = True;
                AnimMgr.Add(container, "<frame pos='10 0' />", 200, CAnimManager::EAnimManagerEasing::CubicInOut);
            }
        }
    }

    --></script>
