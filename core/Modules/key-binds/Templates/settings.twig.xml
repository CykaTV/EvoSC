<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<manialink name="ESC:key-binds-settings" id="key-binds-settings" version="3">
    <frame id="window" pos="-30 {{  (count(binds) * 4.0 + 12.0)/2.0 }}">
        <quad size="60 {{  count(binds) * 4.0 + 12.0 }}" bgcolor="{{ config('colors.ui.background') }}d" z-index="-2" />
        <quad size="60 5" bgcolor="{{ config('colors.ui.header') }}c" z-index="-1" />
        <quad id="handle" size="55 5" />
        <label textfont="RajdhaniMono" pos="1.5 -2.5" valign="center" textsize="0.5" textprefix="$s" text="⌨ Keyboard Setup" />
        <label class="close" textfont="RajdhaniMono" size="5 5" pos="57.5 -2.5" valign="center" halign="center" textsize="0.5" textprefix="$s" text="❌" ScriptEvents="1" focusareacolor1="0000" focusareacolor2="0003" />

        <frame id="entries">
            {% for key, bind in binds %}
            <entry size="8 4" pos="5 {{  key * -4 - 8 }}" textfont="RajdhaniMono" textsize="0.5" valign="center" halign="center" data-default="{{  bind['default'] }}" data-id="{{  bind['id'] }}" focusareacolor1="{{ config('colors.ui.header') }}2" focusareacolor2="{{ config('colors.ui.header') }}c" scale="0.9" />
            {% endfor %}
        </frame>

        {% for key, bind in binds %}
        <label text="{{  bind['description'] }}" pos="10 {{  key * -4 - 8 }}" size="50 4" textfont="RajdhaniMono" valign="center" textsize="0.75" />
        {% endfor %}

        <label class="save" text="Save & close" size="20 4" textfont="RajdhaniMono" pos="30 {{  count(binds) * -4.0 - 9.0 }}" valign="center" halign="center" textsize="0.5" ScriptEvents="1" focusareacolor1="{{ config('colors.ui.header') }}3" focusareacolor2="{{ config('colors.ui.header') }}c" scale="0.9" />
    </frame>

    <script><!--
    #Include "MathLib" as ML
    #Include "TextLib" as TL

    {{ (new esc\Classes\ManiaLinkDrag()) }}

    main(){
        declare persistent Text[Text] CustomKeyBinds for LocalUser;
        declare window <=> (Page.MainFrame.GetFirstChild("window") as CMlFrame);
        declare entries <=> (Page.MainFrame.GetFirstChild("entries") as CMlFrame);

        foreach(control in entries.Controls){
            declare entry = (control as CMlEntry);
            declare id = entry.DataAttributeGet("id");
            if(CustomKeyBinds.existskey(id)){
                entry.Value = CustomKeyBinds[id];
                entry.DataAttributeSet("old", entry.Value);
            }else{
                entry.Value = entry.DataAttributeGet("default");
                entry.DataAttributeSet("old", entry.Value);
            }
        }

        while(True){
            yield;

            foreach(event in PendingEvents){
                if(event.Control == Null) continue;

                if(event.Control.HasClass("save") && event.Type == CMlScriptEvent::Type::MouseClick){
                    foreach(control in entries.Controls){
                        declare entry = (control as CMlEntry);
                        declare id = entry.DataAttributeGet("id");
                        if(entry.Value != entry.DataAttributeGet("old")){
                            CustomKeyBinds[id] = entry.Value;
                        }
                    }
                    TriggerPageAction("update_keybinds");
                    window.Hide();
                    return;
                }

                if(event.Type == CMlScriptEvent::Type::EntrySubmit){
                    declare entry = (event.Control as CMlEntry);
                    entry.Value = TL::ToUpperCase(entry.Value);
                }

                if(event.Control.HasClass("close") && event.Type == CMlScriptEvent::Type::MouseClick){
                    window.Hide();
                    return;
                }
            }

            maniaLinkDrag();
        }
    }
    --></script>
</manialink>