<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<manialink id="Keybinds" version="3">

    <script><!--
            main() {
                while (True) {
                    yield;

                    foreach (Event in PendingEvents) {
                        if(Event.Type == CMlEvent::Type::KeyPress){
                            if({foreach $keys as $key} Event.KeyName == {$key} ||{/foreach} False){
                                TriggerPageAction("keybind," ^ Event.KeyName);
                            }
                        }
                    }
                }
            }
        --></script>

</manialink>