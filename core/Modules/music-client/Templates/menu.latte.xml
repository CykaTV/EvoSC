<frame pos="0 11" scale="0.8">
    <label pos="0 -12" z-index="0" size="79 5" text="Title"/>
    <label pos="55 -12" z-index="0" size="40 5" text="Artist"/>
    <label pos="85 -12" z-index="0" size="40 5" text="Album"/>

    {if count($songs)}
    {foreach $songs as $key => $song}
    {if $song->title}
    <label pos="0 -{15 + $iterator->counter * 5}" z-index="0" size="50 5" textsize="1.8" valign="center" text=" {$song->title}"/>
    {else}
    <label pos="0 -{15 + $iterator->counter * 5}" z-index="0" size="160 5" textsize="1.8" valign="center" text=" {$song->file}"/>
    {/if}
    <label pos="55 -{15 + $iterator->counter * 5}" z-index="0" size="40 5" textsize="1.8" valign="center" text="{$song->artist}"/>
    <label pos="85 -{15 + $iterator->counter * 5}" z-index="0" size="30 5" textsize="1.8" valign="center" text="{$song->album}"/>
    <label pos="140 -{15 + $iterator->counter * 5}" z-index="0" size="141 4.8" textsize="1.8" valign="center" halign="right" text="Play  " textcolor="{primary_color()|noescape}a" action="ms.play,{$key}"/>
    <label pos="150 -{15 + $iterator->counter * 5}" z-index="0" size="18 4.8" textsize="1.8" valign="center" halign="center" text=" Recommend " textcolor="{primary_color()|noescape}a" action="ms.recommend,{$key}"/>
    {/foreach}
    {/if}
</frame>