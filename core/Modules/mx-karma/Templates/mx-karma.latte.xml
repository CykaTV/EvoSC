<script><!--
main() {
    declare fr <=> (Page.MainFrame.Controls[0] as CMlFrame);
    declare player <=> InputPlayer;

    declare startPos = fr.PosnX;
    declare endPos = startPos * 1.5;

    if(player != Null && player.Speed > 1){
        fr.PosnX = endPos;
    }

    while(True){
        yield;

        if(player != Null && player.Speed > 1){
            if(fr.PosnX < endPos){
                fr.PosnX = fr.PosnX + 1;
            }
        }else{
            if(fr.PosnX > startPos){
                fr.PosnX = fr.PosnX - 1;
            }
        }

        if(fr.PosnX < startPos){
            fr.PosnX = startPos;
        }
    }
}
--></script>