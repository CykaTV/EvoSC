{contentType text}
{extends 'components.tabbed-window'}
{php $window_width = 180;}
{php $window_height = 90;}
<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<manialink version="3">
    {block id}records-table{/block}
    {block title}{$window_title ?? 'Records'}{/block}
    {block icon}🏆{/block}

    {block navbar}
    {include 'components.tabs', tabs => [
    'Records'=>'',
    ]
    }
    {/block}

    {block content}
    {php $x = 0;}
    {foreach $records as $chunk}
    <frame pos="0 -5" hidden="{$x++>0 ? '1' : '0'}">
        {for $column=0; $column<4; $column++}
        {foreach $chunk->forPage($column + 1, 25) as $record}
        <frame pos="{$column * 45} {$iterator->counter * -3}" scale="1.1">
            <label z-index="1" valign="center" halign="right" pos="3.5 0" size="4 2" textprefix="$s" textsize="0.4" text="{$record->Rank}." textfont="{config('colors.ui.font')|noescape}"/>
            <label z-index="0" valign="center" halign="right" pos="15 0" size="10 2" textsize="0.6" text="{formatScore($record->Score)}" textcolor="eee4" textfont="{config('colors.ui.font')|noescape}"/>
            <label z-index="1" valign="center" halign="right" pos="15 0" size="10 2" textsize="0.6" text="{formatScoreNoMinutes($record->Score)}" textcolor="eee" textfont="{config('colors.ui.font')|noescape}"/>
            <label z-index="1" valign="center" pos="17 0" size="21 2" textsize="0.4" textprefix="$s" text="{$record->player->NickName}" textfont="{config('colors.ui.font')|noescape}"/>
            {if $onlineLogins->contains($record->player->Login)}
            {if $record->Player == $localPlayer->id}
            <quad pos="-1 1.35" size="41 3" bgcolor="{config('colors.ui.window.header.color')}" opacity="0.8" z-index="-1" />
            {else}
            <quad pos="-1 1.35" size="41 3" bgcolor="{config('colors.ui.window.header.color')}" opacity="0.4" z-index="-1" />
            {/if}
            {/if}
        </frame>
        {/foreach}
        {/for}
    </frame>
    {/foreach}

    <frame pos="2 -85" z-index="5" hidden="1">
        {for $i=0; $i<$pages; $i++}
        <label pos="{$i*5}" size="3 3" text="{$i+1}" textsize="0.5" valign="center" halign="center" ScriptEvents="1" focusareacolor1="{config('colors.ui.window.header.color')}3" focusareacolor2="{config('colors.ui.window.header.color')}c" />
        {/for}
    </frame>
    {/block}

    <script><!--
    {block scriptDeclarations}
    {/block}

    {block functions}
    {/block}

    {block globals}
    {/block}

    {block bootScript}
    {/block}

    {block pendingEvents}
    {/block}
--></script>
</manialink>